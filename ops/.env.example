# Shared environment variables for ai-pm platform
# Copy this file to .env and customise per environment.

# NextAuth configuration (apps/web)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=CHANGE_ME_NEXTAUTH_SECRET
GOOGLE_CLIENT_ID=CHANGE_ME_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=CHANGE_ME_GOOGLE_CLIENT_SECRET
NEXTAUTH_DEV_DEFAULT_ROLES=admin,lead
NEXTAUTH_DEV_FAKE_EMAIL=dev@example.com

# FastAPI development helpers (services/api)
API_DEV_FAKE_USER_EMAIL=dev@example.com
