{
  "name": "ai-pm",
  "private": true,
  "scripts": {
    "build": "turbo run build --filter=apps/* --filter=services/* --filter=libs/js/*",
    "lint": "turbo run lint --filter=apps/* --filter=services/* --filter=libs/js/*",
    "dev": "concurrently --kill-others --names \"api,worker,web\" \"pnpm run dev:api\" \"pnpm run dev:worker\" \"pnpm run dev:web\"",
    "test": "turbo run test --filter=apps/* --filter=services/* --filter=libs/js/*",
    "dev:api": "make -C services/api dev",
    "dev:worker": "make -C services/worker dev",
    "dev:web": "pnpm --filter @ai-pm/web dev"
  },
  "devDependencies": {
    "turbo": "^1.11.3",
    "concurrently": "^9.0.0"
  },
  "packageManager": "pnpm@9.9.0+sha512.60c18acd138bff695d339be6ad13f7e936eea6745660d4cc4a776d5247c540d0edee1a563695c183a66eb917ef88f2b4feb1fc25f32a7adcadc7aaf3438e99c1"
}
